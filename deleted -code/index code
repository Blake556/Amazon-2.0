

function saveToStorage(itemImage, itemName, itemDescription, itemPrice) {


    localStorage.setItem('item-img', itemImage)
    localStorage.setItem('item-name', itemName)
    localStorage.setItem('item-description', itemDescription)
    localStorage.setItem('item-price', itemPrice)


    // localStorage.setItem('item-img',  JSON.stringify(itemImage))
    // localStorage.setItem('item-name', JSON.stringify(itemName))
    // localStorage.setItem('item-description', JSON.stringify(itemDescription))
    // localStorage.setItem('item-price',  JSON.stringify(itemPrice))
    
    window.location.href = './cart.html'

}


